rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email == 'rozsagyenelaw@yahoo.com';
    }

    // Signature requests folder - for PDFs that need signatures
    // Allow public read so clients can view documents via signature links
    match /signature-requests/{allPaths=**} {
      allow read: if true;  // Public read access for clients
      allow write: if request.auth != null && isAdmin();  // Only admin can upload
    }

    // Documents folder - general documents
    match /documents/{allPaths=**} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null && isAdmin();  // Only admin can upload
    }

    // Signed documents folder - for completed signatures
    match /signed-documents/{allPaths=**} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null;  // Authenticated users (for cloud function)
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
