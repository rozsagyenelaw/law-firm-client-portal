rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin (based on email)
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email == 'rozsagyenelaw@yahoo.com';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Clients collection
    match /clients/{clientId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Matters collection
    match /matters/{matterId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Documents collection
    match /documents/{documentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Messages collection
    match /messages/{messageId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Appointments collection
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Signature Requests collection - NEW
    match /signatureRequests/{requestId} {
      // Allow PUBLIC READ access - the request ID acts as a secure token
      // Anyone with the link can view and sign the document
      allow read: if true;

      // Only admins can create signature requests
      allow create: if isAdmin();

      // Allow updates for signing (anyone with link) or admin
      // This allows clients to update with their signatures
      allow update: if true;

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // Billings collection
    match /billings/{billingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
